---
import { Picture } from "astro:assets";
import macon_pic_1 from "../images/macon-2024-work.jpg";
import shawnee_pic_1 from "../images/shawnee-group.jpg"; 

interface Props {
  src: string;
  alt: string;
  widths?: number[];
  sizes?: string;
  formats?: string[];
  fallbackFormat?: string;
  class?: string;
}

const imageMap = {
  macon_pic_1,
  shawnee_pic_1,
};

const {
  src,
  alt,
  widths = [392, 700, 980, 1960],
  sizes = `(max-width: 360px) 392px, 
           (max-width: 720px) 700px, 
           (max-width: 1600px) 980px, 
           1960px`,
  formats = ["avif"],
  fallbackFormat = "avif",
  class: className = "mx-auto w-full max-w-full rounded-lg"
} = Astro.props;

---

<Picture
  src={imageMap[src]}
  alt="description"
  widths={widths}
  sizes={sizes}
  formats={formats}
  fallbackFormat={fallbackFormat}
  class={className}
/>
